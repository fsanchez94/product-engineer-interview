[flake8]
max-line-length = 88
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    migrations,
    .tox,
    dist,
    build,
    *.egg
ignore = 
    E203,
    W503,
    DJ01
per-file-ignores =
    # Allow imports at bottom of settings files
    */settings.py:E402
    */settings/*.py:E402
    # Allow long lines in migrations
    */migrations/*.py:E501